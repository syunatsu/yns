<div class="form-form">
  <%= form_with model: article, html: {class: "form-article-form"}, local: true do |f| %>
    <%= f.label :category_id, "カテゴリー", class: "form-form-label" %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "form-form-field"}) %>

    <%= f.label :name, "名前", class: "form-form-label" %>
    <%= f.text_field :name, class: "form-form-field" %>

    <%= f.label :address, "住所", class: "form-form-label" %>
    <%= f.text_field :address, class: "form-form-field" %>

    <%= f.label :url, "URL", class: "form-form-label" %>
    <%= f.text_field :url, class: "form-form-field" %>

    <%= f.file_field :image, class: "form-form-image" %>

    <%= f.submit 'Create', class: 'form-create' %>
  <% end %>
  <div class="form-back-to-root">
    <%= link_to '◀︎ Back', root_path, class: "form-back" %>
  </div>
</div>