<div class=favorite_wrap>
  <div class="favorite_container">
    <%= link_to 'TOP PAGE', root_path, class: 'favorite_top' %>
    <div class=favorite_title>
      <h1>Your favorite articles</h1>
    </div>
    <figure class="favorite_photos">
      <% @favorite_articles.each do |favorite|%>
        <div class=favorite_photo>
          <%= link_to image_tag(favorite.image), article_path(favorite), class: 'photo' %>
          <p class="favorite_name">
            <%= link_to favorite.name, article_path(favorite) %>
          </p>
          <p class="favorite_date">
            <%= favorite.created_at %>
          </p>
        </div>
      <% end %>
    </figure>
  </div>
</div>